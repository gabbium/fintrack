{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "Enrich": [ "FromLogContext", "WithActivity", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj} {NewLine}{Exception}"
        }
      }
    ]
  },
  "OpenApi": {
    "Document": {
      "Title": "Fintrack - Ledger HTTP API",
      "Description": "The Ledger Service HTTP API"
    },
    "OAuth": {
      "Url": "http://localhost:8080/realms/fintrack"
    }
  },
  "Identity": {
    "Audience": "ledger-api",
    "Realm": "fintrack"
  }
}
