{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj} {NewLine}{Exception}"
        }
      }
    ]
  },
  "OpenApi": {
    "Title": "Fintrack - Ledger HTTP API",
    "Description": "The Ledger Service HTTP API"
  },
  "Authentication": {
    "OidcJwt": {
      "Audience": "ledger-api"
    }
  }
}
